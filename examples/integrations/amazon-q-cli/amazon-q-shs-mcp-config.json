{
  "mcpServers": {
    "sparkinsight-ai": {
      "command": "/path/to/.local/bin/uv",
      "args": [
        "run",
        "--project",
        "/path/to/sparkinsight-ai",
        "-m",
        "sparkinsight_ai.core.main_stdio"
      ],
      "env": {
        "SHS_MCP_DEBUG": "true",
        "SHS_SERVERS_LOCAL_URL": "http://localhost:18080"
      },
      "cwd": "/path/to/sparkinsight-ai",
      "timeout": 120000,
      "disabled": false
    }
  }
}
